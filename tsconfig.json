{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "types": [
      "vitest/globals",
      "@types/jest"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "functions/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}